// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Court {
  id        String   @id @default(uuid())
  name      String
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Judge {
  id        String   @id @default(uuid())
  name      String
  gender    Sex      @default(UNNAMED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Case {
  id              String   @id @default(uuid())
  caseNumber      String   @unique
  caseSubject     String
  caseDescription String
  accused         String
  plaintiff       String
  caseFiles       Json
  caseContent     Json
  judgeId         Json
  filingDate      DateTime
  hearingDate     DateTime
  rulingDate      DateTime
  createdAt       DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  image     String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum Sex {
  MALE
  FEMALE
  UNNAMED
}
